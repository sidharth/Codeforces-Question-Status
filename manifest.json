{
  "manifest_version": 2,

  "name": "Codeforces Problem Status",
  "description": "Quick access for checking problem submissions",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "background": {
    "scripts": ["js/script1.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Current Page Problem Status",
    "default_icon": "icon.png"
  }
}